<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorwhite"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/chopslogo" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:id="@+id/ed_fname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:layout_marginTop="10dp"
                        android:paddingTop="4dp"
                        android:layout_marginEnd="10dp"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_user_dashboard"
                        android:textColor="@color/colortext"
                        android:textColorHint="@color/colortext"
                        android:hint="@string/firstname" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:id="@+id/ed_lname"
                        android:layout_width="match_parent"
                        android:textColor="@color/colortext"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_user_dashboard"
                        android:textColorHint="@color/colortext"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:layout_marginTop="10dp"
                        android:paddingTop="4dp"
                        android:hint="@string/lastname" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:singleLine="true"
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:textColor="@color/colortext"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:textColorHint="@color/colortext"
                    android:layout_marginTop="10dp"
                    android:paddingTop="4dp"
                    android:hint="@string/enteremial" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                    android:singleLine="true"
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:layout_marginTop="10dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/colortext"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_padlock"
                    android:textColorHint="@color/colortext"
                    android:hint="@string/password"
                    android:text="@string/one_two_three"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:singleLine="true"
                    android:id="@+id/ed_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:textColor="@color/colortext"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_smartphone"
                    android:textColorHint="@color/colortext"
                    android:layout_marginTop="10dp"
                    android:paddingTop="4dp"
                    android:hint="@string/mobile"
                    android:inputType="phone"
                    android:maxLength="10"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:singleLine="true"
                    android:id="@+id/ed_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:textColor="@color/colortext"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_pin"
                    android:textColorHint="@color/colortext"
                    android:layout_marginTop="10dp"
                    android:paddingTop="4dp"
                    android:hint="@string/city" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="By signing up, you agree to our Terms and Policy"
                android:textColor="@color/colorblack" />

            <Button
                android:id="@+id/btn_singup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/button"
                android:text="@string/singup"
                style="@style/Font"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>