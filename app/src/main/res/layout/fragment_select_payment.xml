<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context=".fragment.SelectPaymentFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="Select Payment Method"
            android:textColor="@color/colorblack"
            android:textSize="18dp"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:gravity="center|left"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/radioButton"
                style="@style/Font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="10dp"
                android:text="Cash On Delivery"
                android:textColor="@color/colorblack" />


            <RadioButton
                android:id="@+id/radioButton2"
                style="@style/Font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="10dp"
                android:visibility="gone"
                android:text="Pay With Online"
                android:textColor="@color/colorblack" />

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_order_now"
                style="@style/Font"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textAlignment="center"
                android:background="@drawable/button_conf"
                android:gravity="center"
                android:text="  Order now"
                android:textColor="@color/colorwhite"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/btn_schedule"
                style="@style/Font"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textAlignment="center"
                android:background="@drawable/button_conf"
                android:gravity="center"
                android:text="  Schedule order"
                android:textColor="@color/colorwhite"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/lvl_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="3dp"
            android:layout_margin="2dp"
            android:text="Choose a date for delivery" />
        <RadioGroup
            android:id="@+id/radioGroupslot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:gravity="center|left"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/radioslot1"
                style="@style/Font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="10dp"
                android:text="Slot 1 5:00 am to 6:00 am"
                android:textColor="@color/colorblack" />


            <RadioButton
                android:id="@+id/radioslot2"
                style="@style/Font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="10dp"
                android:text="Slot 2 7:00 to 8:00 am"
                android:textColor="@color/colorblack" />

            <RadioButton
                android:id="@+id/radioslot3"
                style="@style/Font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="10dp"
                android:text="Slot 3 8:00 am to 9:00 am"
                android:textColor="@color/colorblack" />

            <RadioButton
                android:id="@+id/radioslot4"
                style="@style/Font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="10dp"
                android:text="Slot 4.10:00 am to 11:00 am"
                android:textColor="@color/colorblack" />

            <RadioButton
                android:id="@+id/radioslot5"
                style="@style/Font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="10dp"
                android:text="Slot 5 5:00pmto 6:30 pm"
                android:textColor="@color/colorblack" />

        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="3dp"
            android:layout_margin="2dp"
            android:text="Choose a date for delivery" />

        <TextView
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:id="@+id/tvd_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext"
            android:enabled="true"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/calender"
            android:text="Date"
            android:drawableRight="@drawable/ic_expand"
            android:drawableTint="@color/colorAccent"
            android:textColor="@color/colorblack" />
    </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_countinue"
            style="@style/Font"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/button_conf"
            android:gravity="center|left"
            android:paddingRight="10dp"
            android:text="  Confirm Order"
            android:textColor="@color/colorwhite"
            android:textStyle="bold" />



    </LinearLayout>
</RelativeLayout>